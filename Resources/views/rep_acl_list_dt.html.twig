{% import 'KsAdminLteThemeBundle:fragments:crud1_macros.html.twig' as c1m %}
{% set grants = crud['grants'] %}
{% set name = crud['name'] %}
<script>
	var {{name}}_dt_config = {
		select: false,
		columns: [
			{ data: "id", title: "Id" },
			{ data: "role", title: "Rol" },
			{ data: "ac", title: "Función" },
			{ data: "mask", title: "Lectura",
				searchable: false,
				orderable: false,
				render: function (data, type, full, meta) {
