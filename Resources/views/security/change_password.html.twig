{% extends 'KsAdminLteThemeBundle::base.html.twig' %}

{% block bodyopentag %}
<body class="hold-transition login-page">
{% endblock %}

{% block body %}
<div class="container">
		
		<!-- header -->
		<div class="login-logo">
	    {{ include('KsAdminLteThemeBundle:fragments:login_header.html.twig') }}
		</div>
		
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="alert alert-info flashbag" role="alert">{{ username }}, su contraseña ha expirado.</div>
			</div>
		</div>
        
		<div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default" style="margin-top:20px;">
                    <div class="panel-heading">
                        <h3 class="panel-title">Elija una nueva contraseña para iniciar sesión</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
						{{ form_row(form.password) }}
						{{ form_row(form.save) }}
						{{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}