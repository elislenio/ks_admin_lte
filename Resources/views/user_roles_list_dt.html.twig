{% import 'KsAdminLteThemeBundle:fragments:crud1_macros.html.twig' as c1m %}
{% set grants = crud['grants'] %}
{% set name = crud['name'] %}

{# dinamic columns #}
{% set offset = 0 %}
{% set user_pos = 0 %}
{% set assigned_pos = 3 %}
<script>
	var {{name}}_dt_config = {
		columns: [
		{% if grants['MASK_DELETE']|default(false) %}
			{% set offset = offset + 1 %}
			{{ c1m.dt_checkbox('id') }},
		{% endif %}
			{ data: "user", title: "Usuario" },
			{ data: "role", title: "Rol" },
			{ data: "char_assigned", title: "Fecha de asignaci√≥n", orderData: {{ assigned_pos + offset }} },
			{ data: "assigned", visible: false}
		{% if grants['MASK_DELETE']|default(false) %}
			,{{ c1m.dt_action_delete('id', name) }}
		{% endif %}
		],
		order: [[ {{ user_pos + offset }}, "asc" ]]
	};
</script>