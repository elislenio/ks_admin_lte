{% extends 'KsAdminLteThemeBundle::index.html.twig' %}

{% block pageheader %}{{ theme.page_header(hdr|default(false)) }}{% endblock %}
{% block breadcrumb %}{{ theme.breadcrumb(bc|default(false)) }}{% endblock %}

{% block content %}
<div class="box">
	<div class="box-body">
	  <div class="row">
		<div class="col-md-8">
			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			{{ form_row(form.menu_id) }}
			{{ form_row(form.parent_id, {'label': 'Hubicación'}) }}
			{{ form_row(form.label, {'label': 'Texto'}) }}
			{{ form_row(form.route, {'label': 'Ruta'}) }}
			{{ form_row(form.item_order, {'label': 'Orden'}) }}
			{{ form_row(form.icon, {'label': 'Icono'}) }}
			{{ form_row(form.is_branch, {'label': 'Submenú'}) }}
			{{ form_row(form.visible, {'label': 'Visible'}) }}
			{{ form_row(form.ac_id, {'label': 'Función'}) }}
			{{ form_row(form.mask, {'label': 'Permiso'}) }}
			{{ form_row(form.save, {'label': 'Guardar'}) }}
			{{ form_end(form) }}
		</div>
	  </div> 
	</div>
</div>
{% endblock %}